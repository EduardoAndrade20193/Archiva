@{
    ViewData["Title"] = "Licencias";
}

<!-- Bootstrap 5 CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<!-- DataTables CSS para Bootstrap 5 -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />

<!-- JQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- Bootstrap 5 JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<!-- DataTables JS para Bootstrap 5 -->
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>





<div class="container py-4">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-guindo text-white rounded-top-4" >
            <h4 class="mb-0">📄 Licencias Web</h4>
        </div>
        <div class="card-body">
            <table id="tablaLicencias" class="table table-striped table-hover table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Id</th>
                        <th>Nombre</th>
                        <th>Fecha</th>
                        <th>Días Inc.</th>
                        <th>Diagnóstico</th>
                        <th>Municipio</th>
                        <th>Nivel</th>
                        <th>Serie</th>
                        <th>Código</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>






@{
    ViewData["Title"] = "Gráfica de Licencias";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-maroon text-white">
            <h4>Gráfica de Licencias</h4>
        </div>
        <div class="card-body">
            <form id="formFiltro">
                <div class="row">
                    <div class="col-md-5">
                        <label for="fechaInicio" class="form-label">Fecha Inicio</label>
                        <input type="date" id="fechaInicio" class="form-control" required>
                    </div>
                    <div class="col-md-5">
                        <label for="fechaFin" class="form-label">Fecha Fin</label>
                        <input type="date" id="fechaFin" class="form-control" required>
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-maroon w-100">Filtrar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-body">
            <canvas id="graficaLicencias"></canvas>
        </div>
    </div>
</div>



@section Estilos {
    <link rel="stylesheet" href="~/css/tablaLicencias.css" />
}

@section Scripts {
    <script src="~/js/tablaLicencias.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/graficasLicencias.js"></script>

}