@model Archiva.Models.Licencias

@{
    ViewData["Title"] = "Capturar Licencia";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-maroon text-white">
            <h4>Capturar Nueva Licencia</h4>
        </div>
        <div class="card-body">
            <form id="formLicencia">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Nombre" class="form-label"></label>
                        <input asp-for="Nombre" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Fecha" class="form-label"></label>
                        <input asp-for="Fecha" class="form-control" placeholder="dd/mm/yyyy" />
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4">
                        <label asp-for="DiasInc" class="form-label"></label>
                        <input asp-for="DiasInc" class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Diagnostico" class="form-label"></label>
                        <input asp-for="Diagnostico" class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Municipio" class="form-label"></label>
                        <input asp-for="Municipio" class="form-control" />
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4">
                        <label asp-for="Nivel" class="form-label"></label>
                        <input asp-for="Nivel" class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Serie" class="form-label"></label>
                        <input asp-for="Serie" class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Codigo" class="form-label"></label>
                        <input asp-for="Codigo" class="form-control" />
                    </div>
                </div>
                <button type="submit" class="btn btn-maroon">Guardar</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
            </form>

            <div id="mensaje" class="mt-3"></div>
        </div>
    </div>
</div> 


@section Estilos {
    <link rel="stylesheet" href="~/css/createLicencia.css" />
}

@section Scripts {
    <script src="~/js/createLicencia.js"></script>
}