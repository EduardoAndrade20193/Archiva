<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Archiva System </title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
       

    <!-- Custom CSS -->
    <link href="~/css/site.css" rel="stylesheet" />

  
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #431616">
        <div class="container-fluid">
            <a class="navbar-brand" href="#"> Archiva System </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            
        </div>
    </nav>

    <!-- Main Container -->
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block sidebar">     
                <div class="position-sticky">
                    <ul class="nav flex-column">

                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-action="Index" asp-controller="Home">
                                <i class="bi bi-house-door" alt="Home"></i> Home
                            </a>
                        </li>

                        <!-- Licencias Médicas con Submenú -->
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="collapse" href="#submenuLicencias" role="button" aria-expanded="false" aria-controls="submenuLicencias">
                                <i class="bi bi-card-list"></i> Licencias Médicas
                            </a>
                            <div class="collapse ms-3" id="submenuLicencias">
                                <ul class="nav flex-column">
                                    <li class="nav-item">
                                        <a class="nav-link" asp-action="Create" asp-controller="Licencias">Registrar Licencias</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-action="Index" asp-controller="Licencias">Historial</a>
                                    </li>
                                </ul>
                            </div>
                        </li>

                        <!-- Reportes Asistencias con Submenú -->
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="collapse" href="#submenuAsistencias" role="button" aria-expanded="false" aria-controls="submenuAsistencias">
                                <i class="bi bi-clipboard-check"></i> Reportes Asistencias
                            </a>
                            <div class="collapse ms-3" id="submenuAsistencias">
                                <ul class="nav flex-column">
                                    <li class="nav-item">
                                        <a class="nav-link" asp-action="Diarios" asp-controller="Asistencias">Reportes Diarios</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-action="Mensuales" asp-controller="Asistencias">Reportes Mensuales</a>
                                    </li>
                                </ul>
                            </div>
                        </li>

                        <!-- Estadísticas -->
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Graficas" asp-controller="Graficas">
                                <i class="bi bi-bar-chart"></i> Estadísticas
                            </a>
                        </li>

                        <!-- Reportes con Submenú -->
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="collapse" href="#submenuReportes" role="button" aria-expanded="false" aria-controls="submenuReportes">
                                <i class="bi bi-people-fill"></i> Reportes
                            </a>
                            <div class="collapse ms-3" id="submenuReportes">
                                <ul class="nav flex-column">
                                    <li class="nav-item">
                                        <a class="nav-link" asp-action="Generales" asp-controller="Home">Generales</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-action="Personalizados" asp-controller="Home">Personalizados</a>
                                    </li>
                                </ul>
                            </div>
                        </li>

                        <!-- Configuración -->
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Settings" asp-controller="Home">
                                <i class="bi bi-gear"></i> Configuración
                            </a>
                        </li>


                    </ul>
                </div>
            </nav>

            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="pt-3 pb-2 mb-3 border-bottom">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>



    @RenderSection("Scripts", required: false)
    @RenderSection("Estilos", required: false)

    
</body>
</html>
